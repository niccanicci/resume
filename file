if ((isset($_POST["MM_insert"])) && ($_POST["MM_insert"] == "form")) {
  $insertSQL = sprintf("INSERT INTO emp_onet_allowance (type, amount, `date`, allowance_oneT_ID, empID) VALUES (%s, %s, %s, %s, %s)",
                       GetSQLValueString($_POST['type'], "text"),
                       GetSQLValueString($_POST['amount'], "text"),
                       GetSQLValueString($_POST['date'], "date"),
                       GetSQLValueString((md5($_POST['type'].$_POST['amount'].$_POST['empID'].$_POST['date'].round(microtime(true)))), "text"),
                       GetSQLValueString($_POST['empID'], "text"));

  mysql_select_db($database_payroll, $payroll);
  $Result1 = mysql_query($insertSQL, $payroll) or die(mysql_error());

  $insertGoTo = "guard_one_time_allowance.php";
